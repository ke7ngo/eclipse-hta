<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.graphiti.ui.diagramTypes">
      <diagramType
            id="org.eclipse.editor.diagramType"
            name="HTA Diagram"
            type="org.eclipse.editor.diagramType">
      </diagramType>
   </extension>
   
   <extension point="org.eclipse.graphiti.ui.diagramTypeProviders">
      <diagramTypeProvider
            class="org.eclipse.editor.DiagramTypeProvider"
            id="org.eclipse.editor.diagramTypeProvider"
            name="org.eclipse.editor.diagramTypeProvider">
            <diagramType id="org.eclipse.editor.diagramType"/>
      </diagramTypeProvider>
   </extension>
   
   <extension point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor contributorId="org.eclipse.editor.diagramType.PropertyContributor">
          <propertyCategory category="Graphiti"/>
      </propertyContributor>
   </extension>

  <extension point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs contributorId="org.eclipse.editor.diagramType.PropertyContributor">
          <propertyTab label="Main" category="Graphiti" id="graphiti.main.tab"/>
      </propertyTabs>
  </extension>

  <extension point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections contributorId="org.eclipse.editor.diagramType.PropertyContributor">
          <propertySection tab="graphiti.main.tab" class="org.eclipse.editor.features.state.StateNamePropertySection"
           filter="org.eclipse.editor.StatePropertyFilter"
           id="hta.NameSection"
           enablesFor="1">
          <propertySection tab="graphiti.main.tab" class="org.eclipse.editor.features.state.StateInvariantPropertySection"
           filter="org.eclipse.editor.StatePropertyFilter"
           id="hta.InvariantSection"
           enablesFor="1"
           afterSection="hta.NameSection">
          </propertySection>
          </propertySection>
          <propertySection tab="graphiti.main.tab" class="org.eclipse.editor.features.state.StateInitialPropertySection"
           filter="org.eclipse.editor.StatePropertyFilter"
           id="hta.InitialSection"
           enablesFor="1"
           afterSection="hta.InvariantSection">
          </propertySection>
          <propertySection tab="graphiti.main.tab" class="org.eclipse.editor.features.state.StateUrgentPropertySection"
           filter="org.eclipse.editor.StatePropertyFilter"
           id="hta.UrgentSection"
           enablesFor="1"
           afterSection="hta.InitialSection">
          </propertySection>
          <propertySection tab="graphiti.main.tab" class="org.eclipse.editor.features.state.StateCommitedPropertySection"
           filter="org.eclipse.editor.StatePropertyFilter"
           id="hta.CommitedSection"
           enablesFor="1"
           afterSection="hta.UrgentSection">
          </propertySection>
          
      </propertySections>
  </extension>
</plugin>
